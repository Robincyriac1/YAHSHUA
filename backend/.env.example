# YAHSHUA Development Environment Configuration
# Copy this file to .env and fill in your actual values

# Application
NODE_ENV=development
PORT=3001

# Database Configuration
# Use a strong password in production - DO NOT use the example password
DATABASE_URL="postgresql://yahshua_user:your_secure_password@localhost:5432/yahshua?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_USER=yahshua_user
DB_PASSWORD=your_secure_password
DB_NAME=yahshua
DB_NAME_TEST=yahshua_test
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=yahshua-backend
KAFKA_GROUP_ID=yahshua-group

# JWT Configuration
# Generate a strong random secret for production
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# External API Keys
# Get these from respective service providers
NREL_API_KEY=your_nrel_api_key
OPENWEATHER_API_KEY=your_openweather_api_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Frontend Configuration
FRONTEND_URL=http://localhost:3001

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your_app_password

# Monitoring & Logging
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# AI/ML Service Configuration
AI_ML_SERVICE_URL=http://localhost:8000

# Partner Integration URLs
SOLAREDGE_API_URL=https://monitoringapi.solaredge.com
ENPHASE_API_URL=https://api.enphaseenergy.com
AURORA_API_URL=https://api.aurorasolar.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket Configuration
WEBSOCKET_CORS_ORIGIN=http://localhost:3001
